<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_photograph"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/btn_account_head_top_selected"
        android:text="拍照"
        android:textColor="@color/text_dialog_blue"
        android:textSize="19sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_line_grey" />

    <Button
        android:id="@+id/btn_gallery"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/btn_account_head_bottom_selected"
        android:text="图库"
        android:textColor="@color/text_dialog_blue"
        android:textSize="19sp" />

    <Button
        android:id="@+id/btn_cancle"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_account_head_cancle_selected"
        android:text="取消"
        android:textColor="@color/text_dialog_blue"
        android:textSize="19sp" />


</LinearLayout>